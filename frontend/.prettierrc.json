{
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "semi": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "trailingComma": "es5",
    "bracketSameLine": true,
    "bracketLine": true,
    "printWidth": 80,
    "endOfLine": "auto",
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "parser": "html"
            }
        },
        {
            "files": "*.ng.html",
            "options": {
                "parser": "angular",
                "printWidth": 100
            }
        }
    ],
    "plugins": [
        "prettier-plugin-tailwindcss"
    ]
}