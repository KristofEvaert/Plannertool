{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=TransportPlanner;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "ErpApi": {
    "BaseUrl": "https://api.erp.example.com"
  },
  "TravelTime": {
    "AverageSpeedKmh": 60
  },
  "Planning": {
    "Engine": "OrTools",
    "OrTools": {
      "TimeLimitSeconds": 2,
      "SolutionLimit": 1,
      "FirstSolutionStrategy": "PATH_CHEAPEST_ARC",
      "LocalSearchMetaheuristic": "GUIDED_LOCAL_SEARCH",
      "MaxDailyCandidates": 300,
      "DueCostCapKm": 35,
      "DetourCostCapKm": 30,
      "DetourRefKm": 30,
      "LateRefMinutes": 240
    }
  },
  "Jwt": {
    "Issuer": "TransportPlanner",
    "Audience": "TransportPlannerClient",
    "Key": "CHANGE_ME_SUPER_SECRET_KEY_32_CHARS_MIN",
    "AccessTokenLifetimeMinutes": 840
  },
  "InitialSuperAdmin": {
    "Email": "superadmin@local",
    "Password": "ChangeMe123!",
    "DisplayName": "Super Admin"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AuditTrail": {
    "Path": "App_Data/audit-trail.txt",
    "MaxBodyBytes": 65536
  },
  "AllowedHosts": "*"
}
